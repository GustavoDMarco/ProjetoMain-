<h1>New comment</h1>

<%= form_with(model: [ @post, @post.comments.build ], local: true) do |form| %>
 <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, id: :comment_content %>
 </div>

 <div class="actions">
    <%= form.submit %>
 </div>
<% end %>

<br>

<div>
  <%= link_to "Back to comments", comments_path %>
</div>
